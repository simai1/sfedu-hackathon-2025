   <string notr="true">QMainWindow {
	background: #0A0E1A;
	font-family: "Segoe UI", "Roboto", "Helvetica Neue", sans-serif;
}

QLabel {
	color: #E0E0E0;
}

QPushButton {
	background: rgba(77, 161, 255, 0.1);
	border: 1px solid rgba(77, 161, 255, 0.3);
	color: #E0E0E0;
	font-size: 14px;
	font-weight: 500;
	height: 40px;
	padding: 0 20px;
	border-radius: 8px;
	transition: all 0.3s ease;
}

QPushButton:hover {
	background: rgba(77, 161, 255, 0.25);
	border: 1px solid rgba(77, 161, 255, 0.6);
	box-shadow: 0 4px 12px rgba(77, 161, 255, 0.3);
	transform: translateY(-2px);
}

QPushButton:pressed {
	background: rgba(77, 161, 255, 0.15);
	transform: translateY(0px);
	box-shadow: 0 2px 6px rgba(77, 161, 255, 0.2);
}

QPushButton:disabled {
	opacity: 0.4;
	cursor: not-allowed;
}

/* Header */
QLabel#headerTitle {
	font-size: 24px;
	font-weight: 600;
	margin: 24px 0 8px 0;
	text-align: center;
	color: #4DA1FF;
}

/* Status Section */
QWidget[statusSection="true"] {
	background: rgba(77, 161, 255, 0.03);
	border: 1px solid rgba(77, 161, 255, 0.15);
	border-radius: 12px;
	margin: 16px 0;
	padding: 20px;
}

/* Status Item - Clickable */
QWidget[statusItem="true"] {
	margin: 12px 0;
	padding: 16px;
	background: rgba(77, 161, 255, 0.05);
	border: 1px solid rgba(77, 161, 255, 0.15);
	border-radius: 8px;
	cursor: pointer;
}

QWidget[statusItem="true"]:hover {
	background: rgba(77, 161, 255, 0.12);
	border: 1px solid rgba(77, 161, 255, 0.3);
}

/* Status Label */
QLabel[statusLabel="true"] {
	font-size: 14px;
	font-weight: 500;
	margin: 0;
	color: #CCCCCC;
}

/* Status Value - Success */
QLabel[statusValue="true"] {
	font-size: 16px;
	font-weight: 600;
	color: #4DA1FF;
	margin: 0;
	padding: 6px 12px;
	background: rgba(77, 161, 255, 0.1);
	border: 1px solid rgba(77, 161, 255, 0.2);
	border-radius: 6px;
	animation: pulseSuccess 2s ease-in-out infinite;
}

/* Status Value - Error */
QLabel[statusValue="false"] {
	font-size: 16px;
	font-weight: 600;
	color: #999999;
	margin: 0;
	padding: 6px 12px;
	background: rgba(153, 153, 153, 0.1);
	border: 1px solid rgba(153, 153, 153, 0.2);
	border-radius: 6px;
}

/* Status Value - Connecting */
QLabel[statusValue="connecting"] {
	font-size: 16px;
	font-weight: 600;
	color: #F59E0B;
	margin: 0;
	padding: 6px 12px;
	background: rgba(245, 158, 11, 0.1);
	border: 1px solid rgba(245, 158, 11, 0.2);
	border-radius: 6px;
	animation: pulseConnecting 1.5s ease-in-out infinite;
}

/* Status Icon Container */
QWidget[statusIconContainer="true"] {
	background: rgba(77, 161, 255, 0.1);
	border-radius: 50%;
	width: 40px;
	height: 40px;
	min-width: 40px;
	min-height: 40px;
	max-width: 40px;
	max-height: 40px;
}

/* Status Icon - Success */
QLabel[statusIcon="true"] {
	font-size: 20px;
	color: #4DA1FF;
	font-weight: bold;
}

/* Status Icon - Error */
QLabel[statusIcon="false"] {
	font-size: 20px;
	color: #999999;
	font-weight: bold;
}

/* Status Icon - Connecting */
QLabel[statusIcon="connecting"] {
	font-size: 20px;
	color: #F59E0B;
	font-weight: bold;
	animation: spin 1s linear infinite;
}

/* Loading Spinner */
QProgressBar#loadingSpinner {
	border: none;
	background: transparent;
	text-align: center;
	color: #4DA1FF;
	font-size: 14px;
	height: 4px;
	border-radius: 2px;
}

QProgressBar#loadingSpinner::chunk {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
		stop:0 rgba(77, 161, 255, 0.3),
		stop:0.5 rgba(77, 161, 255, 1),
		stop:1 rgba(77, 161, 255, 0.3));
	border-radius: 2px;
	animation: loadingBar 1.5s ease-in-out infinite;
}

@keyframes pulseSuccess {
	0%, 100% {
		opacity: 1;
		box-shadow: 0 0 0 0 rgba(77, 161, 255, 0.7);
	}
	50% {
		opacity: 0.9;
		box-shadow: 0 0 0 8px rgba(77, 161, 255, 0);
	}
}

@keyframes pulseConnecting {
	0%, 100% {
		opacity: 1;
		box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.7);
	}
	50% {
		opacity: 0.8;
		box-shadow: 0 0 0 8px rgba(245, 158, 11, 0);
	}
}

@keyframes spin {
	from {
		transform: rotate(0deg);
	}
	to {
		transform: rotate(360deg);
	}
}

@keyframes loadingBar {
	0% {
		transform: translateX(-100%);
	}
	100% {
		transform: translateX(400%);
	}
}</string>
